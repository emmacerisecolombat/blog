<div class="dropdown-container">
  <header class="clearfix">
    <h1 id="case-title" class="ml-16 py-2"> <%= name %> </h1>
    <figure class="expand"><i class="fa fa-close"></i></figure>
  </header>

  <article>
    <div class="article-inner">
      <ul class="dotless mt-4 mb-12">
        <% cafeterie = @cafes.where(product:"cafeterie") %>
        <% cafeterie.each do |cafe|  %>
        <% if cafe.categorie == true %>
          <li class="ml-16">
            <div id="product-width" class="inline-block font-black ml-12"> <%= cafe.title %></div>
          </li>
            <% if cafe.comment == true %>
              <li class="ml-16">
<!--            <div id="product-width" class="inline-block ml-12"> <%= cafe.name %> </div> -->
                <div id="product-width-descr" class="inline-block ml-4 text-2xl"> - <%= cafe.description %> </div>
                <div class="inline-block ml-12"> <%= cafe.prix %> </div>
              </li>
            <% else %>
              <li class="ml-16">
                <div id="product-width" class="inline-block ml-12"> <%= cafe.name %> </div>
                <div class="inline-block ml-12"> <%= cafe.prix %> </div>
              </li>
            <% end %>
        <% end %>
        <% if (cafe.comment == true) && (cafe.categorie == false) %>
          <li class="ml-16">
              <div id="product-width" class="inline-block ml-2"> <%= cafe.name %> </div>
              <div id="product-width-descri" class="inline-block ml-4 text-2xl"> <%= cafe.description %> </div>
              <div class="inline-block ml-20"> <%= cafe.prix %> </div>
          </li>
        <% end %>
        <% if (cafe.categorie == false) && (cafe.comment == false) %>
          <li class="ml-16">
            <div id="product-width" class="inline-block ml-2"> <%= cafe.name %> </div>
            <div class="inline-block ml-12"> <%= cafe.prix %> </div>
          </li>
        <% end %>
        <%end %>
      </ul>
    </div>
  </article>
</div>
